<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_FlightFind"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ToolbarColoredHotelDetailReview"
                    android:elevation="4dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_below="@id/relativeLayoutTop"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Flights"
                        android:fontFamily="@font/avenirnext_regular"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >

                    <Button
                        android:layout_marginRight="8dp"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="One Way"
                        android:background="@drawable/custom_btn_find_flight1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                    <Button
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                        android:text="Return"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/custom_btn_find_flight2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:background="@drawable/custom_input"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FROM"
                            android:textSize="10dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:background="@drawable/custom_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ho Chinh Minh"
                            android:lines="1"
                            android:maxLines="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_input"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TO"
                            android:textSize="10dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:background="@drawable/custom_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Singapore"
                            android:lines="1"
                            android:maxLines="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:weightSum="10"
                        android:background="@drawable/custom_input"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FLY OUT"
                                android:textSize="10dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                            <EditText
                                android:id="@+id/txtSelectDateFlyOut"
                                android:background="@drawable/custom_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Date"
                                android:lines="1"
                                android:maxLines="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>

                        <View
                            android:background="#E0E0E1"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FLY BACK"
                                android:textSize="10dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                            <EditText
                                android:id="@+id/txtSelectDateFlyBack"
                                android:background="@drawable/custom_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Select Date"
                                android:lines="1"
                                android:maxLines="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_input"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PASSENGERS"
                            android:textSize="10dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:background="@drawable/custom_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="2 Adults"
                            android:lines="1"
                            android:maxLines="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSearchAirplaneFindPage"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/customize_button_login"/>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>