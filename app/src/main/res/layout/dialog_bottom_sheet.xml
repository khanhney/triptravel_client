<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bottom_sheet"
    android:theme="@style/Base.AlertDialog.AppCompat"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCancel_Flights"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quay lại"/>
                <TextView
                    android:id="@+id/txtDone_Flights"
                    android:textColor="#4A90E2"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoàn thành"/>
            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E1"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:fontFamily="@font/avenirnext_regular"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Người lớn"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16+ tuổi"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/btnClick1"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sub"/>

                    <TextView
                        android:id="@+id/txtChange1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <ImageButton
                        android:id="@+id/btnClick2"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E1"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:fontFamily="@font/avenirnext_regular"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tuổi teen"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12-15 tuổi"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/btnClick3"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sub"/>

                    <TextView
                        android:id="@+id/txtChange3"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <ImageButton
                        android:id="@+id/btnCLick4"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E1"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:fontFamily="@font/avenirnext_regular"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trẻ em"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2-11 tuổi"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sub"/>

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E1"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:fontFamily="@font/avenirnext_regular"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sơ sinh"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dưới 2 tuổi"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sub"/>

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>