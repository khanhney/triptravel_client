<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_HotelDetail"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ToolbarColoredHotelDetailReview"
                    android:elevation="4dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="24dp"
                android:layout_below="@id/relativeLayoutTop"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đánh Giá"/>

                    <LinearLayout
                        android:id="@+id/lnLayoutWirte"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="2"
                            android:textAlignment="viewEnd"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Viết đánh giá"/>

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_weight="9"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:src="@drawable/change"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="7.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="60dp"
                            android:textColor="@color/colorOgrange"/>

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Max 5 sao)"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_weight="6"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progress="80"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_weight="6"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progress="70"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_weight="6"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progress="55"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_weight="6"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                               <View
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progress="30"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_weight="6"
                                android:weightSum="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:src="@drawable/start"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progress="24"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25 xếp hàng"
                            android:textAlignment="textEnd"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_below="@id/scroll"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlvListReviewRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>